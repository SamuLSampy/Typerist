<%- include('partials/doc', {css: ['root.css', 'register.css']}) %>
<body>
    <%- include('partials/nav') %>
    <div class="register">
        <h1 class="title">Criar Conta</h1>
        <div class="register-container">
            <form action="/register" method="post">
                <div>
                    <p>Apelido</p>
                    <input type="text" required placeholder="Apelido" name="nickname">
                </div>
                <div>
                    <p>E-mail</p>
                    <input type="email" required placeholder="email" name="email">
                </div>
                <div>
                    <p>Senha</p>
                    <input type="password" required placeholder="passsword" name="password">
                </div>
                <div>
                    <p>Repetir senha</p>
                    <input type="password" required placeholder="repeat password" name="repeatPass">
                </div>
                <div class="register-button">
                    <button>Registrar</button>
                </div>
            </form>
        </div>
    </div>
    <script src="assets/js/register.bundle.js"></script>

</body>
</html>